<?php
    function recursiveListDisplay($categories, $firstLoop = true){    
        $temp = '';
        if($categories){
            if (!$firstLoop){
                $temp .= '<ul>';
            }
            
            foreach($categories as $category){
                
                $temp_1 = array(); 
                if(!empty($category['children'])){
                    $temp_1 = recursiveListDisplay($category['children'], false);
                }
                
                $opened = '';
                if ($category['state']['opened']){
                    $opened = 'opened';
                }
                
                $selected = '';
                if ($category['state']['selected']){
                    $selected = 'selected';
                }
                
                $temp .= '<li class="'.$opened.'"><span class="'.$selected.'" title="'.$category['text'].'">'.$category['cat_id'].' - '.$category['text'].'</span>';
                $temp .= (!empty($temp_1['html'])) ? $temp_1['html'] : '';
                $temp .= '</li>';
            }
            
            if (!$firstLoop){
                $temp .= '</ul>';
            }
        }
        
        return array('html' => $temp);
    }
?>

<div class="row">
    <div class="col-md-12">
    	<ul id="<?= $this->pluginId; ?>">
    		<?php echo recursiveListDisplay($this->categoryList)['html'];?>
        </ul>
    </div>
</div>



